{
  "name": "srako/openid-connect",
  "type": "library",
  "description": "PHP implementation of https://openid.net/specs/openid-connect-core-1_0.html",
  "keywords": [
    "openid",
    "openid connect",
    "oidc",
    "php"
  ],
  "homepage": "https://github.com/srako/openid-connect",
  "license": "MIT",
  "authors": [
    {
      "name": "Srako",
      "email": "srakor@163.com",
      "homepage": "https://srako.github.io",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4",
    "php-http/discovery": "^1.14",
    "psr/http-client": "^1.0.1",
    "psr/http-factory": "^1.0.1",
    "psr/http-message": "^1.0.1",
    "psr/simple-cache": "^1.0.1 || ^3.0",
    "web-token/jwt-checker": "^2.2 || ^3.0",
    "web-token/jwt-core": "^2.2 || ^3.0",
    "web-token/jwt-signature": "^2.2 || ^3.0",
    "web-token/signature-pack": "^2.2 || ^3.1",
    "web-token/encryption-pack": "^2.2 || ^3.1",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Srako\\OpenIDConnect\\": "src"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true
    }
  }
}
